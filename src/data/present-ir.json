      { "pronoun": "Nós", "suffix": "-imos", "example": "abrimos" },
      { "pronoun": "Vós", "suffix": "-is", "example": "abris" },
      { "pronoun": "Eles / Elas / Vocês", "suffix": "-em", "example": "abrem" }
    ]
  },
  "exercices": [
