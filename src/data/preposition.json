    { "id": "prep-06", "title": "O jardim está ___ da escola.", "translation": "Le jardin est ___ de l'école.", "category": "Vocabulaire", "options": ["atrás", "dentro", "entre", "em cima"], "correctAnswer": "atrás" },
    { "id": "prep-07", "title": "Eu estou ___ dois amigos.", "translation": "Je suis ___ deux amis.", "category": "Vocabulaire", "options": ["entre", "fora", "debaixo", "em cima"], "correctAnswer": "entre" },
    { "id": "prep-08", "title": "O cão quer ir para ___ de casa.", "translation": "Le chien veut aller ___ de la maison (dehors).", "category": "Vocabulaire", "options": ["dentro", "fora", "em cima", "entre"], "correctAnswer": "fora" }
  ]
