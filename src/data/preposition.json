  "exercices": [
    { "id": "prep-01", "title": "O gato dorme ___ da mesa.", "translation": "Le chat dort ___ de la table.", "category": "Vocabulaire", "options": ["debaixo", "dentro", "entre", "atrás"], "correctAnswer": "debaixo" },
