{
  "id": "challenge-sit-01",
  "title": "Desafios de Situação",
  "category": "SITUAÇÃO",
  "theory": {
    "description": "Prêt pour le grand défi ? 10 situations réelles tirées au sort pour tester tes réflexes. Attention, les options sont subtiles !",
    "vocabulary": [] 
  },
  "exercices": [
    { "id": "s1", "type": "qcm", "title": "Tu entres dans un magasin à 10h du matin :", "options": ["Boa tarde", "Bom dia", "Boa noite", "Bom descanso"], "correctAnswer": "Bom dia", "translation": "Bonjour (matin)" },
    { "id": "s2", "type": "qcm", "title": "Tu entres dans un restaurant à 20h :", "options": ["Bom dia", "Boa tarde", "Boa noite", "Bem-vindo"], "correctAnswer": "Boa noite", "translation": "Bonsoir" },
    { "id": "s3", "type": "qcm", "title": "Tu veux commander un café à Lisbonne :", "options": ["Uma bica, faz favor", "Um café, faz favor", "Um galão, faz favor", "Uma bica, de nada"], "correctAnswer": "Uma bica, faz favor", "translation": "Un espresso, s'il vous plaît" },
    { "id": "s4", "type": "qcm", "title": "Tu veux l'addition à la fin du repas :", "options": ["A ementa, faz favor", "A conta, faz favor", "O recibo, faz favor", "A nota, faz favor"], "correctAnswer": "A conta, faz favor", "translation": "L'addition, s'il vous plaît" },
    { "id": "s5", "type": "qcm", "title": "Quelqu'un te dit 'Obrigado', tu réponds :", "options": ["De nada", "Nada disso", "Não faz mal", "Com certeza"], "correctAnswer": "De nada", "translation": "De rien" },
    { "id": "s6", "type": "qcm", "title": "Tu n'as pas entendu ce qu'on t'a dit :", "options": ["O que é?", "Pode repetir?", "Como é?", "Repete lá?"], "correctAnswer": "Pode repetir?", "translation": "Pouvez-vous répéter ?" },
    { "id": "s7", "type": "qcm", "title": "Tu bouscules quelqu'un par mégarde :", "options": ["Com licença", "Desculpe", "Perdão", "Lamento"], "correctAnswer": "Desculpe", "translation": "Excusez-moi / Pardon" },
    { "id": "s8", "type": "qcm", "title": "Tu veux interpeller un serveur poliment :", "options": ["Ei, senhor!", "Olhe, desculpe", "Vem cá", "Faz favor"], "correctAnswer": "Olhe, desculpe", "translation": "Regardez, excusez-moi" },
    { "id": "s9", "type": "qcm", "title": "Tu quittes des amis et tu les revois demain :", "options": ["Até logo", "Até amanhã", "Até breve", "Até já"], "correctAnswer": "Até amanhã", "translation": "À demain" },
    { "id": "s10", "type": "qcm", "title": "Tu demandes le prix d'un objet :", "options": ["Quanto custa?", "Quanto é?", "Qual é o preço?", "Quanto val?"], "correctAnswer": "Quanto custa?", "translation": "Combien ça coûte ?" },
    { "id": "s11", "type": "qcm", "title": "Tu cherches les toilettes au restaurant :", "options": ["Onde é o WC?", "Onde fica a casa de banho?", "O WC está onde?", "Onde são os banhos?"], "correctAnswer": "Onde fica a casa de banho?", "translation": "Où sont les toilettes ?" },
    { "id": "s12", "type": "qcm", "title": "On te propose un café, tu réponds 'Oui, s'il vous plaît' :", "options": ["Sim, de nada", "Sim, se faz favor", "Sim, com prazer", "Sim, obrigado"], "correctAnswer": "Sim, se faz favor", "translation": "Oui, s'il vous plaît" },
    { "id": "s13", "type": "qcm", "title": "On te demande si ça va, tu réponds 'Bien, merci' :", "options": ["Bem, obrigado", "Bom, obrigado", "Estou bem, de nada", "Bem, faz favor"], "correctAnswer": "Bem, obrigado", "translation": "Bien, merci" },
    { "id": "s14", "type": "qcm", "title": "Tu veux dire 'Enchanté' après une présentation :", "options": ["Muito prazer", "Prazer em vê-lo", "Igualmente", "Encantado"], "correctAnswer": "Muito prazer", "translation": "Enchanté" },
    { "id": "s15", "type": "qcm", "title": "Tu es d'accord avec ce qu'on vient de dire :", "options": ["Pois é", "Assim é", "Está bem", "Claro que não"], "correctAnswer": "Pois é", "translation": "C'est vrai / En effet" },
    { "id": "s16", "type": "qcm", "title": "Tu veux demander si la personne parle français :", "options": ["Fala português?", "Fala francês?", "Percebe francês?", "Diz francês?"], "correctAnswer": "Fala francês?", "translation": "Parlez-vous français ?" },
    { "id": "s17", "type": "qcm", "title": "Tu veux commander une bière pression :", "options": ["Um copo de cerveja", "Uma imperial, se faz favor", "Um fino, se faz favor", "Uma bica"], "correctAnswer": "Uma imperial, se faz favor", "translation": "Une bière pression" },
    { "id": "s18", "type": "qcm", "title": "Tu entres dans un café à 16h :", "options": ["Bom dia", "Boa tarde", "Boa noite", "Olá"], "correctAnswer": "Boa tarde", "translation": "Bon après-midi" },
    { "id": "s19", "type": "qcm", "title": "Tu veux dire 'Ce n'est pas grave' :", "options": ["Não faz mal", "Não é grave", "Sem problemas", "Não importa"], "correctAnswer": "Não faz mal", "translation": "Ce n'est pas grave" },
    { "id": "s20", "type": "qcm", "title": "Tu veux commander un café avec une goutte de lait :", "options": ["Um café leite", "Um pingado", "Um galão", "Um meia de leite"], "correctAnswer": "Um pingado", "translation": "Un café noisette" },
    { "id": "s21", "type": "qcm", "title": "Tu cherches la gare ferroviaire :", "options": ["Onde é a paragem?", "Onde fica a estação?", "Onde é a gare?", "Onde está o comboio?"], "correctAnswer": "Onde fica a estação?", "translation": "Où est la gare ?" },
    { "id": "s22", "type": "qcm", "title": "Tu veux confirmer avec un 'Bien sûr' :", "options": ["Com certeza", "Claro que sim", "Pode ser", "Talvez"], "correctAnswer": "Com certeza", "translation": "Bien sûr" },
    { "id": "s23", "type": "qcm", "title": "Tu veux commander un grand café au lait (verre) :", "options": ["Um café grande", "Um galão", "Um meia de leite", "Uma bica"], "correctAnswer": "Um galão", "translation": "Un grand café au lait" },
    { "id": "s24", "type": "qcm", "title": "Tu veux dire 'À tout à l'heure' :", "options": ["Até amanhã", "Até logo", "Até já", "Até breve"], "correctAnswer": "Até logo", "translation": "À tout à l'heure" },
    { "id": "s25", "type": "qcm", "title": "Pour dire 'S'il vous plaît' poliment :", "options": ["Por favor", "Se faz favor", "Dá-me", "Quero"], "correctAnswer": "Se faz favor", "translation": "S'il vous plaît" },
    { "id": "s26", "type": "qcm", "title": "Tu demandes si la table est libre :", "options": ["Está livre?", "Está disponível?", "Está vazia?", "Pode-se?"], "correctAnswer": "Está livre?", "translation": "Est-ce libre ?" },
    { "id": "s27", "type": "qcm", "title": "Tu veux dire 'Je ne sais pas' :", "options": ["Não conheço", "Não sei", "Não entendo", "Não percebo"], "correctAnswer": "Não sei", "translation": "Je ne sais pas" },
    { "id": "s28", "type": "qcm", "title": "Tu veux dire 'Je comprends' :", "options": ["Eu percebo", "Eu entendo", "Eu compreendo", "Todas as opções"], "correctAnswer": "Todas as opções", "translation": "Je comprends" },
    { "id": "s29", "type": "qcm", "title": "Tu cherches le centre-ville :", "options": ["Onde é o centro?", "Onde fica a baixa?", "Para onde é o centro?", "Onde é o meio?"], "correctAnswer": "Onde fica a baixa?", "translation": "Où est le centre-ville ?" },
    { "id": "s30", "type": "qcm", "title": "Pour dire 'D'accord' :", "options": ["Está bem", "De acordo", "Combinado", "Todas as opções"], "correctAnswer": "Todas as opções", "translation": "D'accord" },
    { "id": "s31", "type": "qcm", "title": "Tu commandes un verre de vin rouge :", "options": ["Um copo de vinho tinto", "Um copo de vinho branco", "Um copo de vinho maduro", "Um copo de vinho verde"], "correctAnswer": "Um copo de vinho tinto", "translation": "Un verre de vin rouge" },
    { "id": "s32", "type": "qcm", "title": "Tu veux demander ton chemin :", "options": ["Desculpe, onde fica...?", "Sabe onde é...?", "Pode dizer-me onde fica...?", "Todas as opções"], "correctAnswer": "Todas as opções", "translation": "Où se trouve... ?" },
    { "id": "s33", "type": "qcm", "title": "Tu veux dire 'À bientôt' :", "options": ["Até breve", "Até logo", "Até amanhã", "Até já"], "correctAnswer": "Até breve", "translation": "À bientôt" },
    { "id": "s34", "type": "qcm", "title": "Tu es perdu, tu dis 'Je suis perdu' :", "options": ["Estou perdido", "Sou perdido", "Fiquei perdido", "Tenho perdido"], "correctAnswer": "Estou perdido", "translation": "Je suis perdu" },
    { "id": "s35", "type": "qcm", "title": "Tu souhaites un bon voyage :", "options": ["Boa viagem", "Bom caminho", "Boa ida", "Bom passeio"], "correctAnswer": "Boa viagem", "translation": "Bon voyage" },
    { "id": "s36", "type": "qcm", "title": "Tu souhaites bon appétit :", "options": ["Bom apetite", "Bom proveito", "Bom comer", "Opções 1 e 2"], "correctAnswer": "Opções 1 e 2", "translation": "Bon appétit" },
    { "id": "s37", "type": "qcm", "title": "Tu souhaites bonne chance :", "options": ["Boa sorte", "Boa ventura", "Bom sucesso", "Boa esperança"], "correctAnswer": "Boa sorte", "translation": "Bonne chance" },
    { "id": "s38", "type": "qcm", "title": "Tu demandes l'heure :", "options": ["Que horas são?", "Qual é a hora?", "Tens horas?", "Opções 1 e 3"], "correctAnswer": "Opções 1 e 3", "translation": "Quelle heure est-il ?" },
    { "id": "s39", "type": "qcm", "title": "Tu te présentes :", "options": ["O meu nome é...", "Chamo-me...", "Sou o...", "Todas as opções"], "correctAnswer": "Todas as opções", "translation": "Je m'appelle..." },
    { "id": "s40", "type": "qcm", "title": "Tu dis ta nationalité :", "options": ["Sou francês", "Estou francês", "Falo francês", "Venho de francês"], "correctAnswer": "Sou francês", "translation": "Je suis français" },
    { "id": "s41", "type": "qcm", "title": "Tu cherches une pharmacie :", "options": ["Onde é a farmácia?", "Onde fica a farmácia?", "Há uma farmácia perto?", "Todas as opções"], "correctAnswer": "Todas as opções", "translation": "Où est la pharmacie ?" },
    { "id": "s42", "type": "qcm", "title": "Tu demandes à payer par carte :", "options": ["Posso pagar com cartão?", "Aceitam multibanco?", "Tem MB?", "Todas as opções"], "correctAnswer": "Todas as opções", "translation": "Puis-je payer par carte ?" },
    { "id": "s43", "type": "qcm", "title": "Tu félicites le cuisinier :", "options": ["Está delicioso", "É muito bom", "Gostei muito", "Todas as opções"], "correctAnswer": "Todas as opções", "translation": "C'est délicieux" },
    { "id": "s44", "type": "qcm", "title": "Tu ne comprends pas du tout :", "options": ["Não entendo nada", "Não percebo nada", "Não sei nada", "Opções 1 e 2"], "correctAnswer": "Opções 1 e 2", "translation": "Je ne comprends rien" },
    { "id": "s45", "type": "qcm", "title": "Tu demandes 'Qu'est-ce que c'est ?' :", "options": ["O que é isto?", "Que é isso?", "O que é aquilo?", "Todas as opções"], "correctAnswer": "Todas as opções", "translation": "Qu'est-ce que c'est ?" },
    { "id": "s46", "type": "qcm", "title": "Tu confirmes que c'est correct :", "options": ["Está certo", "É verdade", "Exato", "Todas as opções"], "correctAnswer": "Todas as opções", "translation": "C'est correct" },
    { "id": "s47", "type": "qcm", "title": "Tu trouves le prix trop élevé :", "options": ["É caro", "É muito caro", "É um roubo", "Opções 1 e 2"], "correctAnswer": "Opções 1 e 2", "translation": "C'est (trop) cher" },
    { "id": "s48", "type": "qcm", "title": "Tu trouves le prix intéressant :", "options": ["É barato", "É económico", "É em conta", "Todas as opções"], "correctAnswer": "Todas as opções", "translation": "C'est bon marché" },
    { "id": "s49", "type": "qcm", "title": "Tu demandes si c'est loin :", "options": ["É longe?", "Fica longe?", "É muito distante?", "Opções 1 e 2"], "correctAnswer": "Opções 1 e 2", "translation": "Est-ce loin ?" },
    { "id": "s50", "type": "qcm", "title": "Tu veux trinquer :", "options": ["Saúde!", "Cin-cin!", "À nossa!", "Opções 1 e 3"], "correctAnswer": "Opções 1 e 3", "translation": "Santé !" }
  ]
}